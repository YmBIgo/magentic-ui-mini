docker build ./ --platform=linux/amd64 -t vnc-chromium-2
docker run -it --rm \
    --hostname vnc-chromium-2 \
    -p 3001:3001 \
    -p 9200:9200 \
    -p 6080:6080 \
    -e VNC_PW=headless \
    --shm-size=256m \
    vnc-chromium-2

curl -X POST http://localhost:3001/gotoPage \
  -H "Content-Type: application/json" \
  -d "{\"url\":\"https://yahoo.co.jp\"}"

curl -X POST http://localhost:3001/keyboardType \
  -H "Content-Type: application/json" \
  -d "{\"text\":\"京都\"}"

curl -X POST http://localhost:3001/tapText \
  -H "Content-Type: application/json" \
  -d "{\"text\":\"京都の動画\"}"

curl -X POST http://localhost:3001/getScreenshot \
  -H "Content-Type: application/json"

curl -X POST http://localhost:3001/keyboardEnter \
  -H "Content-Type: application/json"

curl -X POST http://localhost:3001/scrollUp \
  -H "Content-Type: application/json"

curl -X POST http://localhost:3001/refresh \
  -H "Content-Type: application/json"

curl -X POST http://localhost:3001/searchWeb \
  -H "Content-Type: application/json" \
  -d "{\"query\":\"京都\"}"

