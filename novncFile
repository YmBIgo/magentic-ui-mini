docker run -d \
  --name chromium-vnc \
  --hostname chromium-vnc \
  --add-host="host.docker.internal:host-gateway" \
  --platform=linux/amd64 \
  -p 6901:6901 \
  -p 9200:9200 \
  --shm-size=256m \
  -e VNC_PW=headless \
  accetto/ubuntu-vnc-xfce-chromium-g3:latest

docker exec -it chromium-vnc /lib/usr/chromium-browser/chromium-browser --no-sandbox --remote-debugging-address=0.0.0.0 --remote-debugging-port=9200

docker exec -it chromium-vnc chromium-browser --no-sandbox --remote-debugging-address=0.0.0.0 --remote-debugging-port=9200

